@model StevenWilliams.Models.JobHistory

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Job History</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Company)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.YearsExperience)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearsExperience)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @if (Model.History_ID != null)
    {   
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Years
                </th>
            </tr>
            @foreach (var test in Model.History_ID)
            {
                <tr>


                    <td>
                        @Html.DisplayFor(model => test.Skill.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(model => test.Skill.Years)
                    </td>
                </tr>
            }

        </table>        
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
