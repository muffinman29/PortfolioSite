@model IEnumerable<StevenWilliams.Models.JobHistory>

@{
    ViewBag.Title = "Index";   
}

<h2>Job History</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-responsive table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearsExperience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearsExperience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>

            <a href='@Url.Action("Edit", new { id = item.ID })'>
                <span class="glyphicon glyphicon-edit"></span>
            </a>
            <a href='@Url.Action("Details", new { id = item.ID })'>
                <span class="glyphicon glyphicon-file"></span>
            </a>
            <a href='@Url.Action("Delete", new { id = item.ID })'>
                <span class="glyphicon glyphicon-trash"></span>
            </a>

            @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-default" })*@
            @*@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-default" }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-default" })*@
        </td>
    </tr>
}

</table>
